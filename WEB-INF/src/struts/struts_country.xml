<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts> 
    <package name="country" extends="default"> 

        <!-- 国家信息列表 -->  
        <action name="BS002_10" class="cn.com.bhh.erp.action.CountryAction" method="listCountry"> 
            <result name="input" type="freemarker">/WEB-INF/pages/country/country_list.ftl</result>  
            <result name="success" type="freemarker">/WEB-INF/pages/country/country_list.ftl</result> 
        </action>  

        <!-- 增加国家页面 -->  
        <action name="BS002_20" class="cn.com.bhh.erp.action.CountryAction" method="createCountryPre"> 
            <result name="input" type="chain">BS002_10</result>  
            <result name="success" type="freemarker">/WEB-INF/pages/country/country_create.ftl</result> 
        </action>  

        <!-- 增加国家操作 -->  
        <action name="BS002_21" class="cn.com.bhh.erp.action.CountryAction" method="createCountry"> 
            <result name="input" type="freemarker">/WEB-INF/pages/country/country_create.ftl</result>  
            <result name="success" type="redirectAction">BS002_10</result> 
        </action>  

        <!-- 修改国家页面 -->  
        <action name="BS002_30" class="cn.com.bhh.erp.action.CountryAction" method="modifyCountryPre"> 
            <result name="input" type="chain">BS002_10</result>  
            <result name="success" type="freemarker">/WEB-INF/pages/country/country_modify.ftl</result> 
        </action>  

        <!-- 修改国家操作  -->  
        <action name="BS002_31" class="cn.com.bhh.erp.action.CountryAction" method="modifyCountry"> 
            <result name="input" type="freemarker">/WEB-INF/pages/country/country_modify.ftl</result>  
            <result name="success" type="redirectAction">BS002_10</result> 
        </action>  

        <!-- 删除国家操作  -->  
        <action name="BS002_40" class="cn.com.bhh.erp.action.CountryAction" method="deleteCountry"> 
            <result name="input" type="chain">BS002_10</result>  
            <result name="success" type="redirectAction">BS002_10</result> 
        </action> 

    </package> 
</struts>
