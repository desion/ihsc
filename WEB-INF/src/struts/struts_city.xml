<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts> 
    <package name="city" extends="default"> 

        <!-- 城市信息列表 -->  
        <action name="BS004_10" class="cn.com.bhh.erp.action.CityAction" method="listCity"> 
            <result name="input" type="freemarker">/WEB-INF/pages/city/city_list.ftl</result>  
            <result name="success" type="freemarker">/WEB-INF/pages/city/city_list.ftl</result> 
        </action>  

        <!-- 城市查询操作 -->  
        <action name="BS004_11" class="cn.com.bhh.erp.action.CityAction" method="searchCity"> 
            <result name="input" type="freemarker">/WEB-INF/pages/city/city_search.ftl</result>  
            <result name="success" type="chain">BS004_10</result> 
        </action>  
        
        <!-- 增加城市信息页面 -->  
        <action name="BS004_20" class="cn.com.bhh.erp.action.CityAction" method="createCityPre"> 
            <result name="input" type="freemarker">/WEB-INF/pages/city/city_list.ftl</result>  
            <result name="success" type="freemarker">/WEB-INF/pages/city/city_create.ftl</result> 
        </action>  

        <!-- 增加城市信息操作 -->  
        <action name="BS004_21" class="cn.com.bhh.erp.action.CityAction" method="createCity"> 
            <result name="input" type="freemarker">/WEB-INF/pages/city/city_create.ftl</result>  
            <result name="success" type="redirectAction">BS004_10</result> 
        </action>  

        <!-- 修改城市信息页面 -->  
        <action name="BS004_30" class="cn.com.bhh.erp.action.CityAction" method="modifyCityPre"> 
            <result name="input" type="chain">BS004_10</result>  
            <result name="success" type="freemarker">/WEB-INF/pages/city/city_modify.ftl</result> 
        </action>  

        <!-- 修改城市信息操作 -->  
        <action name="BS004_31" class="cn.com.bhh.erp.action.CityAction" method="modifyCity"> 
            <result name="input" type="freemarker">/WEB-INF/pages/city/city_modify.ftl</result>  
            <result name="success" type="redirectAction">BS004_10</result> 
        </action>  

        <!-- 删除城市信息操作 -->  
        <action name="BS004_40" class="cn.com.bhh.erp.action.CityAction" method="deleteCity"> 
            <result name="input" type="chain">BS004_10</result>  
            <result name="success" type="chain">BS004_10</result> 
        </action>
        
        <!--城市查询页面 -->  
        <action name="BS004_70" class="cn.com.bhh.erp.action.CityAction" method="searchCityPre"> 
            <result name="success" type="freemarker">/WEB-INF/pages/city/city_search.ftl</result> 
        </action>  

    </package> 
</struts>
