            <param name="minLength">1</param>
            <param name="maxLength">30</param>
            <message key="BSE00003"></message>
        </field-validator>
    </field>

    <!-- 发生故障前操作6 -->
    <field name="fault.operation6">
        <field-validator type="stringlength">
