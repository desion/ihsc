<#if currPage??>
<#list 1..totalPages as page>
   <#if page==currPage >
      <option value="${page}" selected>${page}</option> 
   <#else>
   	  <option value="${page}" >${page}</option> 
   </#if>
</#list>
<#else>
	<#list 1..totalPages as page>
	   	  <option value="${page}" >${page}</option> 
	</#list>
</#if>